<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="500dp"
    android:minHeight="900dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="16dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="90dp"
                            app:cardElevation="@dimen/cardview_default_elevation">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/profile_image"
                                    android:layout_gravity="center"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/western_logo"
                                    app:civ_border_width="3dp"
                                    app:civ_border_overlay="true"
                                    app:civ_border_color="#FF000000"/>


                        </android.support.v7.widget.CardView>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat ="@drawable/ic_account_circle_black_24dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="Name : "
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:id="@+id/first_name"
                            android:text="Mohammad Javad"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_marginRight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat ="@drawable/ic_account_circle_black_24dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="LastName : "
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:id="@+id/last_name_pro"
                            android:text="Mohammad Javad"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_marginRight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            app:srcCompat ="@drawable/ic_phone_black_40dp"/>



                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="left"
                                    android:text="Phone :"
                                    android:textSize="16sp"
                                    android:layout_marginRight="10dp" />




                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:id="@+id/phone_pro"
                            android:text="+98 9390091027"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_marginRight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            app:srcCompat ="@drawable/ic_date_range_black_24dp"/>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="Date Of Join :"
                            android:textSize="15sp"
                            android:layout_marginRight="10dp" />




                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:id="@+id/date_pro"
                            android:text="1396/4/2"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_marginRight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            app:srcCompat ="@drawable/ic_timer_gray_30dp"/>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="Totall Play Time :"
                            android:textSize="16sp"
                            android:layout_marginRight="10dp" />




                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:id="@+id/play_time_pro"
                            android:text="32 hrs  15 min"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_marginRight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            app:srcCompat ="@drawable/ic_monetization_on_gray_30dp"/>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="Total Money :"
                            android:textSize="16sp"
                            android:layout_marginRight="10dp" />




                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:id="@+id/total_money_pro"
                            android:text="350,000 IRR"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_marginRight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            app:srcCompat ="@drawable/ic_attach_money_gray_30dp"/>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="Left Money :"
                            android:textSize="16sp"
                            android:layout_marginRight="10dp" />




                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:id="@+id/left_money_pro"
                            android:text="4,000 IRR"
                            android:textColor="#970505"
                            android:textSize="18sp"
                            android:layout_marginRight="10dp" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center">


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DONE"
                            android:textColor="#fff"
                            android:background="#41b60b"
                            android:elevation="@dimen/cardview_default_elevation"
                            android:id="@+id/btn_done"
                            android:shadowRadius="10" />





                </LinearLayout>

        </LinearLayout>








</LinearLayout>